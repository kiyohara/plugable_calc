#!/usr/bin/env ruby
here = File.dirname(__FILE__)
$LOAD_PATH << File.expand_path(File.join(here, '..', 'lib'))
require 'plugable_calc'

require 'optparse'
require 'awesome_print'

Class.new do
  def parse_settings
    [
      ['-s', '--string [STRING]', 'Target string'],
      ['-p', '--progress', 'Show progress']
    ]
  end

  def require_opts
    [
      'string'
    ]
  end

  def opt_parse
    @option = OptionParser.new do |opts|
      parse_settings.each do |opt_set|
        opts.on(*opt_set)
      end
    end.getopts

    require_opts.each do |opts|
      if @option[opts].nil?
        fail "option --#{opts} required"
      end
    end
  end

  def run
    opt_parse

    input = @option['string']
    progress = @option['progress']

    if progress
      proc_progress = Proc.new do |progress|
        puts progress
      end
    end

    puts "#{input} = #{PlugableCalc.calc(input, proc_progress)}"
  rescue => e
    puts e.message.red
    exit 1
  end
end.new.run
